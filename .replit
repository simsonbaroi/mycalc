modules = ["web"]

[nix]
channel = "stable-24_05"
packages = ["static-web-server"]

[deployment]
publicDir = "/"
deploymentTarget = "static"

[workflows]
runButton = "Open Calculator"

[[workflows.workflow]]
name = "Open Calculator"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Calculator is ready! Open the Preview tab to use it.\""

[[ports]]
localPort = 80
externalPort = 80